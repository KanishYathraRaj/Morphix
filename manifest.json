{
  "manifest_version": 3,
  "name": "Morphix",
  "version": "1.0",
  "description": "Gommala Morphix Vantan da... Ella Odunga da....",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "unlimitedStorage",
    "webRequest",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js","background.js"]
    }
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }

}
