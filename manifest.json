{
  "manifest_version": 3,
  "name": "AI Chat Assistant",
  "version": "1.0",
  "description": "Gommala Morphix Vantan da... Ella Odunga da....",
  "permissions": [
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
